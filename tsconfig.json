{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es5",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "extension-src"
  ]
}
